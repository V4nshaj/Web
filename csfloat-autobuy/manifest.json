{
  "manifest_version": 3,
  "name": "CSFloat Sniper Bot",
  "version": "1.0",
  "description": "Snipes discounted skins on CSFloat automatically and notifies you.",
  "permissions": [
    "storage",
    "notifications",
    "alarms",
    "background",
    "offscreen",
    "tabs"
  ],
  "host_permissions": [
    "https://csfloat.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
